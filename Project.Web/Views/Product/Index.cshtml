@using Project.Core.DTOs;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ProductWithCategoryDto>
    <table class="table table-striped">
        <thead>
            <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Stock</td>
            <td>Price</td>
            <td>Category</td>
            <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        
        
        @if (Model != null)
        {

            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                 <td>@item.Stock</td>
                  <td>@item.Price</td>
                   <td>@item.Category.Name</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }
        }
        </tbody>
    </table>